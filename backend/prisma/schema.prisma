// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id               String    @id @default(cuid())
  name             String
  joinCode         String    @unique
  adminSecret      String
  participantCount Int       @default(10)
  threshold        Int       @default(50)
  status           Status    @default(ACTIVE)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // ADD: Admin penalty controls
  recentPenalty    Boolean   @default(false)  // -15 points
  sickPenalty      Boolean   @default(false)  // -10 points
  importantPenalty Boolean   @default(false)  // -5 points

  participants     Participant[]
  groupResult      GroupResult?

  @@map("sessions")
}

model Participant {
  id           String  @id @default(cuid())
  sessionId    String
  hashCode     String  @unique
  hasSubmitted Boolean @default(false)
  isJoined     Boolean @default(false)
  score        Int?

  // ADD: Individual criteria scores
  rarity       Int?
  social       Int?
  distance     Int?
  context      Int?

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("participants")
}

model GroupResult {
  id           String  @id @default(cuid())
  sessionId    String  @unique
  averageScore Int     // CHANGE: Float to Int
  canSmoke     Boolean
  createdAt    DateTime @default(now())

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("group_results")
}

enum Status {
  ACTIVE
  COMPLETED
  CANCELLED
}